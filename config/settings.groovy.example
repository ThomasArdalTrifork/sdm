// Default settings

db {
	driver = "com.mysql.jdbc.Driver" // TODO (thb): Is there really any need to include this?
	url = "jdbc:mysql://localhost/"
	username = "root"
	password = ""
}

cobertura {
	format = "html"
}


replication {
	defaults.pageSize = 1000
	
	security.secret = "CHANGE ME!"
	security.urlTimeToLive = 15
}                              

// Environment specific settings.
// These will override the defaults settings above.

environments {
	production {
		db.schema = "sdm"
		db.housekeeping.schema = "sdm_housekeeping"
	}
	test {
		db.schema = "sdm_test"
		db.housekeeping.schema = "sdm_housekeeping_test"
	}
}
